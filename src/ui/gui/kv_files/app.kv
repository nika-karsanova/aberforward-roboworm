<Button>
    size_hint: (0.1, 0.1)

<Label>
    size_hint: (0.1, 0.1)

<CheckBox>
    size_hint: (0.1, 0.1)

<WindowManager>:
    id: window_manager

    MainScreen:
    LoadingScreen:

<MainScreen>:
    id: main_screen
	name: "main_screen"

	WindowsFileChooser:
	    id: main_screen_chooser

<LoadingScreen>:
    msc: root.manager.get_screen("main_screen").ids.main_screen_chooser
    progress_label: progress_widget.ids.progress_bar_label
    progress_back_button: progress_widget.ids.progress_bar_button
    progress_bar:progress_widget.ids.progress_bar

    id: loading_screen
	name: "loading_screen"
	on_enter: self.thread_it()

	ProgressHeartbeat:
	    id: progress_widget

<ProgressHeartbeat>
    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		padding: 10

		Label:
		    size_hint: (0.2, 0.2)
			id: progress_bar_label
			halign: 'center'
			text: "Starting..."
			pos_hint: {'center_x':0.5, 'center_y':0.5}

		ProgressBar:
			id: progress_bar
			min: 0
			max: 1
			pos_hint: {'center_x':0.5, 'center_y':0.5}
			size_hint_x: .8

        Button:
            id: progress_bar_button
            text: 'Back'
            opacity: 0
            disabled: True
            pos_hint: {'center_x':0.5, 'y':-0.5}
            on_press:
                app.root.current = "main_screen"
                progress_bar_label.text = "Starting..."
                progress_bar.value = 0

                self.disabled = True
                self.opacity = 0

#:import Factory kivy.factory.Factory
<WarningPopup@Popup>:
    title: 'Warning'
    size_hint: (None, None)
    size: (400, 250)

    FloatLayout:
        Label:
            halign: 'center'
            text: "Not all the requested fields were provided. \nMake sure the needed information is given and \ntry again."
            size_hint: 0.6, 0.2
            pos_hint: {"x":0.2, "top":0.8}

        Button:
            text: "Close"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            on_press: root.dismiss()


#:import Factory kivy.factory.Factory
<DirectoriesPopup@Popup>:
    title: 'Warning'
    size_hint: (None, None)
    size: (400, 250)

    FloatLayout:
        Label:
            halign: 'center'
            text: "Maximum number of directories was provided. \nPlease, process current directories before adding more."
            size_hint: 0.6, 0.2
            pos_hint: {"x":0.2, "top":0.8}

        Button:
            text: "Close"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            on_press: root.dismiss()

#:import Factory kivy.factory.Factory
<PathDoesNotExistPopup@Popup>:
    title: 'Warning'
    size_hint: (None, None)
    size: (400, 250)

    FloatLayout:
        Label:
            halign: 'center'
            text: "Input or Output path provided do not exist. \nMake sure the correct information is given \nand try again."
            size_hint: 0.6, 0.2
            pos_hint: {"x":0.2, "top":0.8}

        Button:
            text: "Close"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            on_press: root.dismiss()

<WindowsFileChooser>
    inp:directory_choice
    out:output_path
    grid_mode: grid_box
    stack_mode: stack_box
    x_dim: x_dim
    y_dim: y_dim
    framerate:framerate
    is_gif: is_gif
    parallelism: parallelism

    GridLayout:
        cols: 1
        rows: 6
        size: root.width, root.height

        Label:
            id: current_directory
            text: "Directory 1 out of 10"
            size_hint: (None, None)
            size: root.width, 25
            font_size: 12

        GridLayout:
            cols: 3
            rows: 1
            size_hint: (None, None)
            size: root.width, 50
            padding: 10
            spacing: 10

            Label:
                text: "Folder:"

            TextInput:
                id: directory_choice
                multiline: False
                hint_text: "Folder Path"

            PathButton:
                text: "Browse"
                on_press: directory_choice.text = self.get_path()

        GridLayout:
            cols: 2
            rows: 1
            size_hint: (None, None)
            size: root.width, 200
            padding: 10
            spacing: 10

            GridLayout:
                cols: 1
                rows: 3
                size_hint: (0.5, 1)

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: (1, 0.2)

                    Label:
                        text: "Grid:"

                    CheckBox:
                        id: grid_box
                        allow_no_selection: False
                        active: True
                        group: 'mode_choice'

                BoxLayout:
                    orientation: "horizontal"
                    opacity: 1 if grid_box.active else 0

                    Label:
                        id: dimensions_label
                        text: "Dimensions:"

                    TextInput:
                        id: x_dim
                        multiline: False
                        hint_text: "X"
                        input_filter: "int"
                        size_hint: (0.05, 0.4)


                    TextInput:
                        id: y_dim
                        multiline: False
                        hint_text: "Y"
                        input_filter: "int"
                        size_hint: (0.05, 0.4)

                BoxLayout:
                    orientation: "horizontal"
                    opacity: 0


            GridLayout:
                cols: 1
                rows: 3
                size_hint: (0.5, 1)

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: (1, 0.2)

                    Label:
                        text: "Stack:"

                    CheckBox:
                        id: stack_box
                        allow_no_selection: False
                        group: 'mode_choice'

                BoxLayout:
                    orientation: "horizontal"
                    opacity: 1 if stack_box.active else 0

                    Label:
                        text: "Framerate:"

                    TextInput:
                        id: framerate
                        multiline: False
                        hint_text: "Number of Frames"
                        input_filter: "int"
                        size_hint: (0.1, 0.4)

                BoxLayout:
                    orientation: "horizontal"
                    opacity: 1 if stack_box.active else 0

                    Label:
                        text: "GIF:"

                    CheckBox:
                        id: is_gif

        GridLayout:
            cols: 3
            rows: 1
            size_hint: (None, None)
            size: root.width, 50
            padding: 10
            spacing: 10

            Label:
                text: "Output \nfolder: "

            TextInput:
                id: output_path
                multiline: False
                hint_text: "Output Path"

            PathButton:
                text: "Browse"
                on_press: output_path.text = self.get_path()

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'center'
            size_hint: (None, None)
            size: root.width, 100

            BoxLayout:
                orientation: "horizontal"
                padding: 10
                spacing: 10

                BoxLayout:
                    size_hint: (0.2, 1)
                    pos_hint: {'y': 0.14}
                    Label:
                        text: "Parallelism"

                    CheckBox:
                        active: 0
                        id: parallelism

                Button:
                    id: back_button
                    text: 'Back'
                    size_hint: (0.2, 0.4)
                    disabled: True
                    opacity: 0
                    on_press: root.back()

                Button:
                    id: next_button
                    text: 'Next'
                    size_hint: (0.2, 0.4)
                    disabled: False
                    opacity: 1
                    on_press: Factory.PathDoesNotExistPopup().open() if not root.path_validation() else Factory.WarningPopup().open() if root.check_values() else Factory.DirectoriesPopup().open() if root.confirm_dir_total() else root.next()

                Button:
                    id: submit_button
                    size_hint: (0.2, 0.4)
                    text: "Submit"
                    on_press: Factory.PathDoesNotExistPopup().open() if not root.path_validation() else Factory.WarningPopup().open() if root.check_values() else root.change_screen()
